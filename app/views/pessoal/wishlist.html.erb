<%= content_for :nav do%>
  <%= render "pessoal/navbar" %>
<% end %>

<div class = "p-texto">
    <h1>Lista de Presentes</h1><br/>
    
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
          <% for i in 0..(@gifts.length-1) %>
              <li data-target="#carouselExampleIndicators" data-slide-to=<%=i%> class="active"></li>
          <% end %>
      </ol>
      <div class="carousel-inner">
        <% @gifts.each do |gift| %>
            <% if @primeiro == false %>
                <div class="carousel-item active item-carrosel">
                <% @primeiro = true %>
            <% else %>
                <div class="carousel-item item-carrosel">
            <% end %>
              <center><img class="image-fluid img-carrosel" src=<%= gift.url_image %> alt=<%= gift.name %>></center>
            </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Pr√≥ximo</span>
      </a>
    </div>

</div>
<hr><hr>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Wishlevel</th>
      <th>Price</th>
      <th>Description</th>
      <th>Url image</th>
      <th>Url prod</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gifts.each do |gift| %>
      <tr>
        <td><%= gift.name %></td>
        <td><%= gift.wishlevel %></td>
        <td><%= gift.price %></td>
        <td><%= gift.description %></td>
        <td><%= gift.url_image %></td>
        <td><%= gift.url_prod %></td>
        <td><%= gift.active %></td>
    <% end %>
  </tbody>
</table>

<%= content_for :footer do%>
    <%= render "footer" %>
<% end %>